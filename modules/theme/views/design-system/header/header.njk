{% extends dsPreview %}
{% import "theme:header.html" as header %}

{% block tagline %}
Page Header
{% endblock %}

{% block preview %}
  {% render header.render(story.data, currentUrl = data.url) %}
{% endblock %}

{% block variants %}
  {# container #}
  <div class="mx-auto mb-10 max-w-7xl px-4 sm:px-6 lg:px-8">
    {# Code grid - 2 cols #}
    <div class="grid grid-cols-2">
    {% dscode 'njk' %}
      {% import "theme:header.html" as header %}

      {% render header.render(config, currentUrl = data.url) %}
    {% enddscode %}

    {% dscode 'json', label = 'Data', parse = true %}{{ story.data | jsonPretty }}{% enddscode %}
    </div>
  </div>
{% endblock %}
